{% endblock %}

{% block title %}Book-worm
{% endblock %}

{% block slider %}
<div class="shadow-lg text-center"
	style="margin-top: 85px;height: 60px;background-color: rgb(250, 182, 9);">
	<h1 class="py-2" style="margin-top: 15px;font-family: cursive;">üêõThe BüëÄkwormüêõ</h1>
</div>
<div class="home-slider shadow-lg" style="margin-top: 5px;">
	<ul id="slider">
		<li>
			<img src="https://images.pexels.com/photos/2249063/pexels-photo-2249063.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
				style="height: 400px;width: 1400px;" class="d-block w-100" alt="...">
		</li>
		<li>
			<img src="https://images.pexels.com/photos/6654177/pexels-photo-6654177.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
				style="height: 400px;width: 1400px;" class="d-block w-100" alt="...">
		</li>
		<li>
			<img src="https://images.pexels.com/photos/8236200/pexels-photo-8236200.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
				style="height: 400px;width: 1400px;" class="d-block w-100" alt="...">
		</li>
	</ul>
</div>
{% endblock %}
{% block body %}

<div class="px-5 text-bg-light rounded-4 book-section">
	<h2 class="pb-2 border-bottom px-5 py-2">English books</h2>
	<div class="container rounded-2" style="background-color: silver">
		<div class="row owl-carousel owl-theme py-4 px-5" style="margin-left:2px">
			{% for data in book %}
			<div class="col">
				<div class="card h-100 d-flex flex-column overflow-hidden bg-light rounded-2 item"
					style=" width: 192px; height: 10rem;">
					<img src="{{path('image_show',{path:'books',file: data.file})}}"
						style=" width: 192px; height: 14rem">
					<div class="card-body text-center">
						<p class="card-text">{{data.title}}</p>
						<small>
							<s>‚Çπ{{data.price + 100}}</s>
						</small>
						<p class="card-text">Price:{{data.price}}</p>
						<a href="{{path('web_book_details',{id: data.id})}}" class="book_details btn btn-warning"
							title="book details" data-toggle="tooltip">Explore
						</a>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	<div class="row row-cols-1 row-cols-lg-4  g-4 py-4"></div>
</div>
<br>
<div class="px-5 text-bg-light rounded-4">
	<h2 class="pb-2 border-bottom px-5 py-4">Bengali books</h2>
	<div class="container rounded-2" style="background-color: silver">
		<div class="row owl-carousel owl-theme py-4 px-5" style="margin-left:2px">
			{% for data in mango %}
			<div class="col">
				<div class="card h-100 d-flex flex-column overflow-hidden bg-light rounded-2 item"
					style=" width: 192px; height: 10rem;">
					<img src="{{path('image_show',{path:'books',file: data.file})}}"
						style=" width: 192px; height: 14rem">
					<div class="card-body text-center">
						<p class="card-text">{{data.title}}</p>
						<small>
							<s>$399</s>
						</small>
						<p class="card-text">Price:{{data.price}}</p>
						<a href="{{path('web_book_details',{id: data.id})}}" class="book_details btn btn-warning"
							title="book details" data-toggle="tooltip">Explore
						</a>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	<div class="row row-cols-1 row-cols-lg-4  g-4 py-4"></div>
</div>

<p class="pb-2 border-bottom"></p>
<div class="jumbotron p-3 p-md-5 text-white shadow-lg rounded" style="background-color: rgb(100, 109, 15);">
	<p style="text-align: center;font-size: 30px;font-family: cursive;color: yellow;"><b>Featured Author</b></p>
	<br>
	<div class="row owl-carousel owl-theme">

		{% for record in authors %}
		<a href="{{path('author_list')}}">
			<img src="{{path('image_show',{path:'authors',file: record.file})}}" alt="" class="shadow-lg author-image"
				style="border: 4px solid rgb(157, 255, 0); height:140px; width:140px; -moz-border-radius: 50px;-webkit-border-radius: 50px;border-radius: 50px;margin-left: 50px;"
				itemprop="image">
			<br>
			<p style="text-align: center;font-size: 15px;color: yellow;">{{record.name}}</p>
		</a>

		{% endfor %}
	</div>

</div>
{% endblock %}
{% block javascripts %}
{{parent()}}
