{% extends 'base.html.twig' %}
{% block bootstrap %}
	{{parent()}}
{% endblock %}
{% block body %}

	<section class="vh-100 gradient-custom" style="background-color: #248f8f;>
								<div class=" container py-5 h-60">
		<div class="row justify-content-center align-items-center h-100">
			<div class="col-10 col-lg-9 col-xl-7">
				<div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
					<div class="card-body p-3 p-md-5">
						<h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
						{{ form_start(form) }}


						<div class="row">
							<div class="col-md-6 mb-4">

								<div class="form-outline">
									{{ form_row(form.firstname) }}
								</div>

							</div>
							<div class="col-md-6 mb-4">

								<div class="form-outline">
									{{ form_row(form.lastname) }}
								</div>

							</div>
						</div>

						<div class="row">
							<div class="col-md-6 mb-4 d-flex align-items-center">

								<div class="form-outline datepicker w-100">
									{{ form_row(form.email) }}
								</div>

							</div>
							<div class="col-md-6 mb-4">
								{{ form_row(form.cellphone) }}
							</div>
						</div>
						<div class="row">

							<div class="col-md-6 mb-4">

								{{ form_row(form.roles) }}
							</div>

							<div class="col-md-6 mb-4">
								{{ form_row(form.status) }}
							</div>
						</div>


						<div class="row">
							<div class="col-md-6 mb-4">
								<label class="form-label" for="_password">Password</label>
								<input type="password" id="_password" name="pass" class="form-control form-control-lg"/>

							</div>
							<div class="col-md-6 mb-4">
								{{ form_row(form.enable) }}
							</div>
						</div>

						<div class="row">
							<div class="col-md-8 mb-6">
								{{ form_row(form.address) }}
							</div>
							<div class="col-md-4 py-5 mb-6">
								<input class="btn btn-primary btn-lg" type="submit" value="Submit"/>
							</div>
						</div>
					</div>
					{{ form_rest(form) }}
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div></section>{% endblock %}
