{% extends 'base_shopkeeper.html.twig' %}

{% block title %}
	{{parent()}}{{title}}
{% endblock %}
{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="//cdn.datatables.net/1.12.0/css/jquery.dataTables.min.css">
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-12">
			<table id="list-user" class="table">
				<thead>
					<tr>
						<th>Sl.No</th>
						<th>Title</th>
						<th>Author</th>
						<th>Publisher</th>
						<th>Edition</th>
						<th>Language</th>
						<th>File</th>
						<th>Genre</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{% set sl = 0 %}
					{% for record in books %}
						<tr>
							<td>{% set sl = sl + 1 %}
								{{sl}}
							</td>
							<td>{{record.title}}</td>
							<td>{{record.author}}</td>
							<td>{{record.publisher}}</td>
							<td>{{record.language}}</td>
							<td>{{record.edition}}</td>
							<td>{{record.file}}</td>

							<td>
								{% for data in record.genre %}
									{% set roleArr = data %}
									{{roleArr}}
								{% endfor %}

							</td>
							<td>
								<a href="{{path('shopkeeper_book_manage',{id: record.id})}}">
									<i class="fa fa-pencil" aria-hidden="true"></i>
								</a>
							</td>
						</tr>

					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}

{% block javascripts %}

	<script src="//cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
	<script>
		$(document).ready(function () {
$('#list-user').DataTable();
});
	</script>
	{{parent()}}
{% endblock %}
