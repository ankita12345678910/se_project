{% extends 'base.html.twig' %}
{% block title %}Log in!
{% endblock %}
{% block bootstrap %}
{{parent()}}
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
{# <section class="vh-100" style="background-color: #248f8f;">
</section> #}
<!-- Section: Design Block -->
<section class="vh-100" style="background-color: #248f8f;"> <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start">
        <div class="container mt-5 py-3">
            <div class="row justify-content-center align-items-center mt-5" style="margin-left: 133px;">

                <div class="col-lg-6 mb-5 mb-lg-0 mt-4 mt-5 py-5">
                    <div class="card" style="height: 350px;width: 350px;">
                        <div class="card-body py-5 px-md-5">
                            <form method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->

                                <h1 class="pb-1 text-center ">Forgot Password</h1>
                                <hr>

                                <br>
                                <!-- Email input -->
                                <div class="form-outline mb-2">
                                    {% if error=='true' %}
                                    <div class="alert alert-danger text-center">

                                        Wrong email address
                                        <!-- <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> -->
                                    </div>
                                    {% endif %}
                                    <label for="_email">Email address</label>
                                    <input type="email" id="_email" name="email_id"
                                        class="form-control form-control form-control-lg" required />
                                </div>

                                <!-- Password input -->
                                <!-- <div class="form-outline mb-4">
										<input type="password" id="form3Example4" class="form-control"/>
										<label class="form-label" for="form3Example4">Password</label>
									</div> -->

                                <!-- Checkbox -->
                                <!-- <div class="form-check d-flex justify-content-center mb-4">
										<input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked/>
										<label class="form-check-label" for="form2Example33">
											Subscribe to our newsletter
										</label>
									</div> -->

                                <!-- Submit button -->
                                <button class="btn btn-lg" style="width: 100%;background-color: #3c6363;color: white;"
                                    type="submit" id="_sub">
                                    Continue
                                </button>


                                <div class="text-center">
                                    <p>or sign up with:</p>
                                    <button type="button"
                                        class="btn btn-link btn-floating mx-1 bi bi-facebook"></button>

                                    <button type="button"
                                        class="btn btn-link btn-floating mx-1 bi bi-whatsapp"></button>

                                    <button type="button" class="btn btn-link btn-floating mx-1 bi bi-twitter"></button>

                                    <button type="button"
                                        class="btn btn-link btn-floating mx-1 bi bi-instagram"></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
{% endblock %}
