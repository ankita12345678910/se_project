<div class="row p-3">
	<div class="col-12">
		{{ form_start(form, { 'attr' : { 'id': 'edit-form' } })}}
       <input type="hidden" name="id" value="{{id}}">
		<div class="row mb-3">
			<div id="max"></div>
			<div class="col-4">
				{{ form_row(form.name) }}
			</div>
			<div class="col-4">
				{{ form_row(form.addressLine1) }}
			</div>
			<div class="col-4">
				{{ form_row(form.addressLine2) }}
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-4">
				{{ form_row(form.landmark) }}
			</div>
			<div class="col-4">
				{{ form_row(form.cellphone) }}
			</div>
			<div class="col-4">
				{{ form_row(form.pin) }}
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-4">
				{{ form_row(form.city) }}
			</div>
			<div class="col-4">
				{{ form_row(form.state) }}
			</div>

		</div>
		<div class="row mb-3">
			<div class="col-4">
				<input type="submit" value="Save" class="btn btn-success">
			</div>
		</div>
		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
</div>
