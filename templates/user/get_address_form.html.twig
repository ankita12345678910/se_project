<div class="row p-3">
	<div class="col-12">
		{{ form_start(form, { 'attr' : { 'id': 'edit-form' } })}}
		<input type="hidden" name="id" value="{{id}}">
		<input type="hidden" name="shipping" value="{{shipping}}">
		<div class="row mb-3">
			<div id="max"></div>			
			
			<div class="col-4">
				
				{{ form_row(form.name) }}
			</div>
			<div class="col-4">
				{{ form_row(form.addressLine1) }}
			</div>
			<div class="col-4">
				{{ form_row(form.addressLine2) }}
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-4">
				{{ form_row(form.pin) }}
			</div>
			<div class="col-4">
				{{ form_row(form.cellphone) }}
			</div>
			<div class="col-4">
				{{ form_row(form.landmark) }}
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-4">
				{{ form_row(form.city) }}
			</div>
			<div class="col-4">
				{{ form_row(form.state) }}
			</div>
			<div class="col-4 py-4">
				<input type="submit" value="Update" style="width: 122px;font-size: 18px;background-color: yellowgreen;" class="btn">
			</div>

		</div>

		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
</div>
